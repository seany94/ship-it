<% provide :head_tags do %>
    <%# Gon gem transfers rails hash data to JS %>
    <%= include_gon %>
    <%= javascript_include_tag 'https://maps.googleapis.com/maps/api/js?key=AIzaSyC-tEAh56qJBnYr7WTsvWyPqa1G9lRPpCc&libraries=places&callback=initMap', 'data-turbolinks-track': 'reload'%>
<% end %>
<div class="h-25 text-center" >  
  <button class="btn btn-outline-primary align-self-center m-auto" id="maptrigger">Show Map</button>
</div>
<div class="wrapper">
  <div class="job-list">
    <% @jobs.each do |job| %>
          <%= content_tag :div, class: "card text-left job-card", startloc: job.start_location, endloc: job.end_location do -%>
        <div class="card-body d-flex">
          <div>
            <% if job.package_picture == nil %>
              <%= image_tag 'http://catawbabrewing.com/wp-content/themes/catawba/images/placeholder.png', width: 50 %>
            <% else %>
              <%= image_tag job.package_picture, width: 50 %>
            <% end %>
          </div>
          <div class="m-2">
            <h5 class="card-title">
              <%= job.title %>
            </h5>
            <p>
              Delivery from: <%= job.start_location %><br>
              Delivery to: <%= job.end_location %>
              <br><br>
              Pickup by: <%= job.date_pickup %><br>
              Deliver by: <%= job.date_delivery %>
            </p>
            <% if job.acceptor_id == nil %>
              <div class="btn btn-primary">Pending</div>
            <% elsif job.acceptor_id != nil and job.user.username != current_user.username%>
              <a href="/users/<%= job.user.id %>" class="btn btn-primary">Creator: <%= job.user.username %></a>
            <% elsif job.acceptor_id != nil %>
              <a href="/users/<%= job.acceptor_id %>" class="btn btn-primary">Acceptor: <%= job.acceptor.username %></a>
            <% end %>
          </div>
        </div>
        <% end -%>
    <% end %>
  </div>
  <div class="map-wrapper">
    <div id="map"></div>
  </div>
</div>
