<div class="modal fade" id="signup-modal">
	<div class="modal-dialog">
		<div class="modal-content">

			<div class="modal-header">
				<h5 class="modal-title">Sign Up</h5>
				<button type="button" class="close" data-dismiss="modal">
					<span>&times;</span>
				</button>
			</div>

			<div class="modal-body">
				<%= form_for(resource, as: resource_name, url: registration_path(resource_name), remote: true) do |f| %>
				<%= devise_error_messages! %>
				<h3 class="text-center default-text py-3"><i class="fas fa-user-plus"></i> Sign Up:</h3>

				<div class="mx-5">
        <div class="d-inline-block">
					<i class="fas fa-user"></i>
          <label for="defaultForm-email">Your username</label>
        </div>
					<%= f.text_field :username, autofocus: true, class:"form-control" %>
				</div>

        <br>

				<div class="mx-5">
        <div class="d-inline-block">
					<i class="fas fa-images"></i>
					<label for="defaultForm-email">Your profile image</label>
				</div>
          <%= f.file_field :profile_picture %>
				</div>

        <br>

				<div class="mx-5">
        <div class="d-inline-block">
					<i class="fa fa-envelope prefix grey-text"></i>
          					<label for="defaultForm-email">Your email</label>
</div>
					<%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
				</div>

        <br>
        
				<div class="mx-5">
        <div class="d-inline-block">
					<% if @minimum_password_length %>
					<em>(<%= @minimum_password_length %> characters minimum)</em>
					<% end %>
					<i class="fa fa-lock prefix grey-text"></i>
          					<label for="defaultForm-pass">Your password</label>
</div>
					<%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
				</div>

        <br>

				<div class="mx-5">
        <div class="d-inline-block">
					<i class="fa fa-lock prefix grey-text"></i>
          					<label for="defaultForm-pass">Your password confirmation</label>
</div>
					<%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
				</div>

				<br>
        				<div class="mx-5">

				<%= flash[:recaptcha_error] %>
				<%= recaptcha_tags %>
        </div>
				<br>

				<div class="text-center">
						<%= f.submit "Sign up", class:"btn btn-secondary" %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>